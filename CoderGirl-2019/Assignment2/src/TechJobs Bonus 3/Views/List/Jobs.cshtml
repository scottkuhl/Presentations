<h1>@ViewBag.title</h1>

<h3>@ViewBag.jobs.Count Result(s)</h3>

@{
    var cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;
    var textInfo = cultureInfo.TextInfo;

    // TODO #3 - Use the same list display from Views/Search/Index.cshtml

    foreach (var job in ViewBag.jobs as List<Dictionary<string, string>>)
    {
        <table class="table job-listing">

            <thead>
                <tr>
                    <th scope="col">Key</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var property in job)
                {
                    <tr>
                        <td>@textInfo.ToTitleCase(property.Key)</td>
                        <td><a asp-controller="List" asp-action="Jobs" asp-route-column="@property.Key" asp-route-value="@property.Value">@property.Value</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <br />
    }
}