@model CheeseMVC.ViewModels.AddEditCheeseViewModel

<h1>Edit Cheese @Model.Name (id=@Model.CheeseId)</h1>

<form asp-controller="Cheese" asp-action="Edit" method="post">

    <input type="hidden" asp-for="CheeseId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select class="form-control" asp-for="Type" asp-items="Model.CheeseTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
        <span asp-validation-for="Rating"></span>
    </div>

    <input type="submit" value="Edit Cheese" class="btn btn-primary" />

</form>
