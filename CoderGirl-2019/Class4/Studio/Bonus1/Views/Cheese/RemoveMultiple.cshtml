
@{
    Layout = null;
}

<h1>Remove Cheeses</h1>

<form method="post">
    <ul>
        @foreach (var cheese in ViewBag.Cheeses as Dictionary<string, string>)
        {
            <li><input type="checkbox" name="cheeses" value="@cheese.Key" />@cheese.Key - @cheese.Value</li>
        }
    </ul>
    <p>
        <input type="submit" value="Remove Cheese" />
    </p>
</form>